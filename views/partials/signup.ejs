<div id="signContainer" class="formContainer">
    <p class="welcome-message">LET'S GET YOU STARTED</p>
    <h4 class="login-title">Create an Account</h4>
    <form id="signupForm" >
        <div class="input-group" >
            <label for="name">full name</label>
            <input type="text" id="name" name="name" class="form-control">
        </div>
        <div class="input-group">
            <label for="email">email</label>
            <input type="email" id="email" name="email" class="form-control">
        </div>
        <div class="input-group">
            <label for="password">password</label>
            <input type="password" id="password" name="password" class="form-control">
        </div>
        <input type="submit" value="SIGN UP" class="loginButton">
      
        Already have an account?<button type="button" class="btn-1" onclick="openLoginModal()">LOGIN HERE</button>
        <p id="signupMessage" class="error-message"></p>
    </form>
</div>

